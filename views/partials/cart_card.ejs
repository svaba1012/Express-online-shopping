<div class="card row">
  <div class="card-body">
    <div class="row">
      <div class="col-lg-2 col-3">
        <h4><%- article.article.name %></h4>
      </div>
      <div class="col-lg-1 col-3"><%= article.article.sexText %></div>
      <div class="col-lg-1 col-3"><%= article.article.price %>&dollar;</div>
      <div class="col-lg-1 col-3"><%= article.ammount%></div>
      <div class="col-lg-2 col-3">
        <div class="dropdown">
          <button
            class="btn btn-outline-secondary dropdown-toggle"
            type="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            Details...
          </button>
          <ul class="dropdown-menu" style="width: 36rem">
            <li><%- include("card_info.ejs", {article: article.article}) %></li>
          </ul>
        </div>
      </div>
      <div class="col-lg-2 col-3">
        <form action="/menage-cart-remove" method="post">
          <input
            type="text"
            name="articleId"
            id=""
            value="<%= article.article.id %> "
            style="display: none"
          />
          <button type="submit" class="btn btn-outline-danger">
            Remove all
          </button>
        </form>
      </div>
      <div class="col-lg-2 col-3">
        <form action="/menage-cart-subtract" method="post">
          <input
            type="text"
            name="articleId"
            id=""
            value="<%= article.article.id %> "
            style="display: none"
          />
          <button type="submit" class="btn btn-outline-warning">
            Subtract
          </button>
        </form>
      </div>
      <div class="col-lg-1 col-3">
        <form action="/menage-cart-add" method="post">
          <input
            type="text"
            name="articleId"
            id=""
            value="<%= article.article.id %> "
            style="display: none"
          />
          <button type="submit" class="btn btn-outline-primary">Add</button>
        </form>
      </div>
    </div>
  </div>
</div>
