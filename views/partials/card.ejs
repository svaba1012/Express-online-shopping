    <div class="card-body">
      <form action="/cart" method="post">
        <h4 class="card-title"><%= article.name %></h4>
        <input
          type="text"
          name="articleId"
          id=""
          style="display: none"
          value="<%= article.id %>"
        />

        <ul class="list-group list-group-flush">
          <li class="list-group-item"><b>Cloth type: </b> <%=article.type%></li>
          <li class="list-group-item">
            <b>Cloth sex: </b> <%= article.sexText %>
          </li>
          <li class="list-group-item">
            <b>Price: </b> <%= article.price %>&dollar;
          </li>
          <li class="list-group-item">
            <b>Description: </b><%= article.desc.substring(0,50) + "..." %>
          </li>
        </ul>

        <p class="card-text"></p>
        <div class="d-flex justify-content-between align-items-center">
          <!-- <div class="btn-group">
            <button type="button" class="btn btn-outline-secondary">
              View more...
            </button> -->

          <button type="submit" class="btn btn-lg btn-outline-success">
            <i class="fa-solid fa-cart-plus"></i>
          </button>
          <!-- </div> -->
          <small style="color: green">Available</small>
        </div>
      </form>
    </div>
  </div>
</div>
